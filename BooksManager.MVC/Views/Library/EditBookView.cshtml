@model BooksManager.Infrastructure.ViewModels.EditBookViewModel

<h1>Editar Livro</h1>

<form asp-action="EditBook" method="post">
    <input type="hidden" asp-for="Book.Id" />
    <div class="form-group">
        <label>Título:</label>
        <input type="text" asp-for="Book.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>ISBN:</label>
        <input type="text" asp-for="Book.ISBN" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ano de Publicação:</label>
        <input type="number" asp-for="Book.Year" class="form-control" />
    </div>
    <div class="form-group">
        <label>Autor:</label>
        <select asp-for="AuthorId" asp-items="@Model.Authors.Select(a => new SelectListItem() { Value = a.Id.ToString(), Text = a.FullName })" class="form-control">
            <option value="">Selecione um autor</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
