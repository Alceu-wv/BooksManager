@model BooksManager.Infrastructure.ViewModels.EditAuthorViewModel

<h1>Criar Autor</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="CreateAuthor" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Author.FirstName" class="control-label">Nome:</label>
                <input asp-for="Author.FirstName" class="form-control" />
                <span asp-validation-for="Author.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Author.LastName" class="control-label">Sobrenome:</label>
                <input asp-for="Author.LastName" class="form-control" />
                <span asp-validation-for="Author.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Author.Email" class="control-label">Email:</label>
                <input asp-for="Author.Email" class="form-control" />
                <span asp-validation-for="Author.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Author.BirthDate" class="control-label">Data de Nascimento:</label>
                <input type="date" asp-for="Author.BirthDate" class="form-control" />
                <span asp-validation-for="Author.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Image">Foto:</label>
                <input type="file" class="form-control-file" name="Image" />
            </div>

            <button type="submit" class="btn btn-primary">Criar</button>
        </form>
    </div>
</div>

<hr />

<h2>Autores Cadastrados</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Sobrenome</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var author in Model.Authors)
        {
            <tr>
                <td>
                    @author.FirstName
                </td>
                <td>
                    @author.LastName
                </td>
                <td>
                    @author.Email
                </td>
                <td>
                    @author.BirthDate
                </td>
                <td>
                    <a href="@Url.Action("EditAuthorView", new { id = author.Id })">Editar</a>
                    <a href="@Url.Action("DeleteAuthor", new { id = author.Id })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
